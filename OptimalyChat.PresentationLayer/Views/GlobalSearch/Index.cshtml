@model GlobalSearchViewModel
@{
    ViewData["Title"] = "Globální vyhledávání";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@ViewData["Title"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Domů</a></li>
                        <li class="breadcrumb-item active">Vyhledávání</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <!-- Search Form -->
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-body">
                            <form asp-action="Index" method="get" id="search-form" class="form-inline">
                                <div class="input-group input-group-lg w-100">
                                    <input type="text" 
                                           name="q" 
                                           value="@Model.Query" 
                                           class="form-control form-control-lg" 
                                           placeholder="Hledat uživatele..."
                                           id="search-input"
                                           autocomplete="off">
                                    <div class="input-group-append">
                                        <button class="btn btn-primary" type="submit" id="search-button">
                                            <i class="fas fa-search"></i>
                                            Hledat
                                        </button>
                                        @if (!string.IsNullOrEmpty(Model.Query))
                                        {
                                            <a asp-action="Index" class="btn btn-outline-secondary">
                                                <i class="fas fa-times"></i>
                                                Vymazat
                                            </a>
                                        }
                                    </div>
                                </div>
                                <div id="search-suggestions" class="w-100 mt-2" style="display: none;">
                                    <div class="list-group"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Query))
            {
                <!-- Search Results Summary -->
                <div class="row">
                    <div class="col-12">
                        <div class="alert @(Model.HasResults ? "alert-info" : "alert-warning")">
                            <i class="fas @(Model.HasResults ? "fa-info-circle" : "fa-exclamation-triangle")"></i>
                            @Model.ResultSummary
                            @if (!string.IsNullOrEmpty(Model.ExecutionTime))
                            {
                                <span class="float-right text-muted">
                                    <small>Doba hledání: @Model.ExecutionTime</small>
                                </span>
                            }
                        </div>
                    </div>
                </div>

                @if (Model.HasResults)
                {
                    <!-- Users Results -->
                    @if (Model.Users.Any())
                    {
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">
                                            <i class="fas fa-users"></i>
                                            Uživatelé
                                            <span class="badge badge-info ml-2">@Model.ResultCounts.GetValueOrDefault("Users", 0)</span>
                                        </h3>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead>
                                                    <tr>
                                                        <th>Email</th>
                                                        <th>Jméno</th>
                                                        <th>Registrován</th>
                                                        <th>Poslední přihlášení</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var user in Model.Users)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <a asp-controller="Account" asp-action="Profile" asp-route-id="@user.Id">
                                                                    @user.Email
                                                                </a>
                                                            </td>
                                                            <td>@user.FullName</td>
                                                            <td>@user.CreatedAtDisplay</td>
                                                            <td>@(user.LastLoginAt?.ToString("dd.MM.yyyy HH:mm") ?? "Nikdy")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <!-- No Results -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body text-center py-5">
                                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                    <h4>Žádné výsledky</h4>
                                    <p class="text-muted">
                                        Pro dotaz "@Model.Query" nebyly nalezeny žádné výsledky.
                                    </p>
                                    @if (Model.Suggestions.Any())
                                    {
                                        <div class="mt-4">
                                            <h5>Návrhy:</h5>
                                            <ul class="list-unstyled">
                                                @foreach (var suggestion in Model.Suggestions)
                                                {
                                                    <li>@suggestion</li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <!-- Initial State -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center py-5">
                                <i class="fas fa-search fa-3x text-muted mb-3"></i>
                                <h4>Začněte psát pro vyhledávání</h4>
                                <p class="text-muted">
                                    Vyhledávejte uživatele podle emailu, jména nebo příjmení.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var searchInput = $('#search-input');
            var suggestionsContainer = $('#search-suggestions');
            var suggestionsTimeout;
            
            // Auto-suggestions
            searchInput.on('input', function() {
                clearTimeout(suggestionsTimeout);
                var query = $(this).val();
                
                if (query.length < 2) {
                    suggestionsContainer.hide();
                    return;
                }
                
                suggestionsTimeout = setTimeout(function() {
                    $.get('@Url.Action("Suggestions")', { q: query })
                        .done(function(data) {
                            if (data.suggestions && data.suggestions.length > 0) {
                                var html = '';
                                data.suggestions.forEach(function(suggestion) {
                                    html += '<a href="#" class="list-group-item list-group-item-action suggestion-item">' + 
                                           suggestion + '</a>';
                                });
                                suggestionsContainer.find('.list-group').html(html);
                                suggestionsContainer.show();
                            } else {
                                suggestionsContainer.hide();
                            }
                        });
                }, 300);
            });
            
            // Click on suggestion
            $(document).on('click', '.suggestion-item', function(e) {
                e.preventDefault();
                searchInput.val($(this).text());
                suggestionsContainer.hide();
                $('#search-form').submit();
            });
            
            // Hide suggestions on click outside
            $(document).on('click', function(e) {
                if (!$(e.target).closest('#search-form').length) {
                    suggestionsContainer.hide();
                }
            });
            
            // Focus search input
            @if (string.IsNullOrEmpty(Model.Query))
            {
                <text>searchInput.focus();</text>
            }
        });
    </script>
}