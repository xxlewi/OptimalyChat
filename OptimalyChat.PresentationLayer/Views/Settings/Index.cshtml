@model OptimalyChat.PresentationLayer.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "AI Settings";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">AI Settings</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item active">AI Settings</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-check"></i> @TempData["Success"]
            </div>
        }
        
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-ban"></i> @TempData["Error"]
            </div>
        }

        <!-- LM Studio Connection -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">LM Studio Connection</h3>
                <div class="card-tools">
                    <span class="badge @(Model.IsLMStudioConnected ? "badge-success" : "badge-danger")">
                        @(Model.IsLMStudioConnected ? "Connected" : "Disconnected")
                    </span>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-action="TestConnection">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="LMStudioSettings.BaseUrl"></label>
                                <input asp-for="LMStudioSettings.BaseUrl" class="form-control" readonly />
                                <small class="text-muted">Configure in appsettings.json</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="LMStudioSettings.TimeoutSeconds"></label>
                                <input asp-for="LMStudioSettings.TimeoutSeconds" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <div>
                                    <button type="submit" class="btn btn-primary btn-block">
                                        <i class="fas fa-plug"></i> Test Connection
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- AI Models -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">AI Models</h3>
                <div class="card-tools">
                    <form method="post" asp-action="SyncModels" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-info">
                            <i class="fas fa-sync"></i> Sync from LM Studio
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Model ID</th>
                            <th>Provider</th>
                            <th>Max Tokens</th>
                            <th>Temperature</th>
                            <th>Status</th>
                            <th>Loaded</th>
                            <th>Default</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Models.Any())
                        {
                            foreach (var aiModel in Model.Models)
                            {
                                <tr>
                                    <td>@aiModel.Name</td>
                                    <td><code>@aiModel.ModelId</code></td>
                                    <td>@aiModel.Provider</td>
                                    <td>@aiModel.MaxTokens.ToString("N0")</td>
                                    <td>@aiModel.Temperature</td>
                                    <td>
                                        <span class="badge @(aiModel.IsActive ? "badge-success" : "badge-secondary")">
                                            @(aiModel.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge @(aiModel.IsLoadedInLMStudio ? "badge-info" : "badge-secondary")">
                                            <i class="fas @(aiModel.IsLoadedInLMStudio ? "fa-check" : "fa-times")"></i>
                                            @(aiModel.IsLoadedInLMStudio ? "Loaded" : "Not Loaded")
                                        </span>
                                    </td>
                                    <td>
                                        @if (aiModel.IsDefault)
                                        {
                                            <span class="badge badge-primary">Default</span>
                                        }
                                        else
                                        {
                                            <form method="post" asp-action="SetDefaultModel" asp-route-id="@aiModel.Id" class="d-inline">
                                                <button type="submit" class="btn btn-xs btn-outline-primary">
                                                    Set Default
                                                </button>
                                            </form>
                                        }
                                    </td>
                                    <td>
                                        <form method="post" asp-action="ToggleModelStatus" asp-route-id="@aiModel.Id" class="d-inline">
                                            <button type="submit" class="btn btn-xs @(aiModel.IsActive ? "btn-warning" : "btn-success")">
                                                <i class="fas @(aiModel.IsActive ? "fa-pause" : "fa-play")"></i>
                                            </button>
                                        </form>
                                        @if (!aiModel.IsDefault)
                                        {
                                            <form method="post" asp-action="DeleteModel" asp-route-id="@aiModel.Id" 
                                                  class="d-inline" onsubmit="return confirm('Are you sure you want to delete this model?');">
                                                <button type="submit" class="btn btn-xs btn-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center text-muted">
                                    No models found. Click "Sync from LM Studio" to import available models.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Model Information -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Model Information</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-info"><i class="fas fa-brain"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Total Models</span>
                                <span class="info-box-number">@Model.Models.Count</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-success"><i class="fas fa-check-circle"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Active Models</span>
                                <span class="info-box-number">@Model.Models.Count(m => m.IsActive)</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-warning"><i class="fas fa-server"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">LM Studio Models</span>
                                <span class="info-box-number">@Model.Models.Count(m => m.Provider == "LMStudio")</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-12">
                        <div class="info-box">
                            <span class="info-box-icon bg-primary"><i class="fas fa-star"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Default Model</span>
                                <span class="info-box-number">@(Model.Models.FirstOrDefault(m => m.IsDefault)?.Name ?? "None")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>